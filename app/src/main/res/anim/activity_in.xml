<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" >

    <scale 
        android:pivotX="50%"
        android:pivotY="50%"
        android:fromXScale="0.2"
        android:toXScale="1"
        android:fromYScale="0.25"
        android:toYScale="1"
        android:duration="500"
        android:fillAfter="true"/>

    <alpha
        android:fillAfter="true"
        android:duration="500"
        android:fromAlpha="0.2"
        android:toAlpha="1"/>

</set>