<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/main_bg"
              android:isScrollContainer="true"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/add_remind_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/add_remind_cancel_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cancel_bt_bg"
            android:layout_alignTop="@+id/add_remind_confirm_bt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_remind_title_text"
            android:textColor="@color/purple"
            android:textSize="28sp"/>
        <ImageButton
            android:id="@+id/add_remind_confirm_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/confirm_bt_bg" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/add_remind_title"
        android:background="@color/light_purple"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add_remind_medicine_name_text_view_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/add_remind_medicine_name_text"
                android:textColor="@color/purple"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/add_remind_medicine_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/add_remind_medicine_name_text_view_text"
                android:text="三九感冒灵"
                android:textColor="@color/purple"
                android:textSize="16sp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add_remind_medicine_comment_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/add_remind_medicine_comment_text"
                android:textColor="@color/purple"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/add_remind_edit"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginRight="20dp"
                android:layout_alignTop="@+id/add_remind_medicine_comment_text_view"
                android:layout_toEndOf="@+id/add_remind_medicine_comment_text_view"
                android:layout_toRightOf="@+id/add_remind_medicine_comment_text_view"
                android:background="@drawable/my_doctor_add_edit_bg"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/purple"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/add_remind_time_tip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                android:text="@string/add_remind_time_tip_text"
                android:textColor="@color/purple"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/set_remind_time_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/add_remind_time_tip_text"
                android:background="@drawable/add_remind_time_bt_bg"
                android:text="@string/add_remind_time_bt_text"
                android:textColor="@color/purple"/>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>